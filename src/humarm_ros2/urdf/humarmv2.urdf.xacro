<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="humanoid_arm">

  <!-- Material definitions -->
  <material name="blue">
    <color rgba="0.0 0.0 1.0 1.0"/>
  </material>
  <material name="red">
    <color rgba="1.0 0.0 0.0 1.0"/>
  </material>
  <material name="green">
    <color rgba="0.0 1.0 0.0 1.0"/>
  </material>
  <material name="yellow">
    <color rgba="1.0 1.0 0.0 1.0"/>
  </material>
  <material name="white">
    <color rgba="1.0 1.0 1.0 1.0"/>
  </material>

  <!-- World Link -->
  <link name="world"/>

  <!-- Fixed joint to connect robot to world -->
  <joint name="world_to_base" type="fixed">
    <parent link="world"/>
    <child link="base_link"/>
  </joint>

  <!-- Base Link (similar to torso_link in reference robot) -->
  <link name="base_link">
    <visual>
      <geometry>
        <box size="0 0 0"/>
      </geometry>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.3 0.3 0.5"/>
      </geometry>
      <origin xyz="0 0 0.25" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="5.0"/>
      <origin rpy="0 0 0" xyz="0 0 0.25"/>
      <inertia ixx="0.15" ixy="0" ixz="0" iyy="0.15" iyz="0" izz="0.01"/>
    </inertial>
  </link>

  <!-- Shoulder Base Link (similar to right_shoul_base_link) -->
  <link name="shoulder_base_link">
    <visual>
      <geometry>
        <cylinder radius="0.02" length="0.075"/>
      </geometry>
      <origin xyz="0 0 0.0375" rpy="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.02" length="0.075"/>
      </geometry>
      <origin xyz="0 0 0.0375" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <origin rpy="0 0 0" xyz="0 0 0.0375"/>
      <inertia ixx="0.00011" ixy="0" ixz="0" iyy="0.00011" iyz="0" izz="0.00004"/>
    </inertial>
  </link>

  <!-- Joint connecting base to shoulder base (angled as in reference) -->
  <joint name="base_to_shoulder_base" type="fixed">
    <parent link="base_link"/>
    <child link="shoulder_base_link"/>
    <origin xyz="0 -0.12 0.80" rpy="1.047 0 0"/>
  </joint>

  <!-- 1. Shoulder Link (similar to right_shoul_link) -->
  <link name="shoulder_link">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.08"/>
      </geometry>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.08"/>
      </geometry>
      <origin xyz="0 0 0.04" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin rpy="0 0 0" xyz="0 0 0.04"/>
      <inertia ixx="0.00015" ixy="0" ixz="0" iyy="0.00015" iyz="0" izz="0.00009"/>
    </inertial>
  </link>

  <!-- 1. Shoulder Pitch Joint (similar to right_shoul_base2shoul_joint) -->
  <joint name="shoulder_pitch" type="revolute">
    <parent link="shoulder_base_link"/>
    <child link="shoulder_link"/>
    <origin xyz="0 0 0.075" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-2.51" upper="2.51" effort="50" velocity="15.0"/>
    <dynamics damping="0.5" friction="0.1"/>
  </joint>

  <!-- TRANSMISSION for shoulder_pitch -->
  <transmission name="trans_shoulder_pitch">
    <joint name="shoulder_pitch">
      <hardwareInterface>hardware_interface/PositionInterface</hardwareInterface>
    </joint>
    <actuator name="motor_a">
      <hardwareInterface>hardware_interface/PositionInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- 2. Upper Arm Link (similar to right_shoul_rot_link) -->
  <link name="upper_arm_link">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.57075 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.04"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.57075 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.00007" ixy="0" ixz="0" iyy="0.00007" iyz="0" izz="0.00009"/>
    </inertial>
  </link>

  <!-- 2. Shoulder Roll Joint (similar to right_shoul2shoul_rot_joint) -->
  <joint name="shoulder_roll" type="revolute">
    <parent link="shoulder_link"/>
    <child link="upper_arm_link"/>
    <origin xyz="0 0 0.08" rpy="-1.047 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="0.50" effort="50" velocity="15.0"/>
    <dynamics damping="0.5" friction="0.1"/>
  </joint>

  <!-- TRANSMISSION for shoulder_roll -->
  <transmission name="trans_shoulder_roll">
    <joint name="shoulder_roll">
      <hardwareInterface>hardware_interface/PositionInterface</hardwareInterface>
    </joint>
    <actuator name="motor_b">
      <hardwareInterface>hardware_interface/PositionInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

    <!-- Upper Arm Extension Link (similar to right_upper_arm_link) -->
  <link name="upper_arm_extension_link">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.125"/>
      </geometry>
      <origin xyz="0 0 -0.0625" rpy="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.125"/>
      </geometry>
      <origin xyz="0 0 -0.0625" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.1"/>
      <origin rpy="0 0 0" xyz="0 0 -0.0625"/>
      <inertia ixx="0.0002" ixy="0" ixz="0" iyy="0.0002" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

  <!-- Fixed joint connecting upper_arm_link to extension -->
  <joint name="upper_arm_to_extension" type="fixed">
    <parent link="upper_arm_link"/>
    <child link="upper_arm_extension_link"/>
    <origin xyz="0 0 0" rpy="0 0 0"/>
  </joint>

  <!-- 3. Upper Arm Rotation Link (similar to right_armrot_link) -->
  <link name="upper_arm_rotation_link">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.22"/>
      </geometry>
      <origin xyz="0 0 -0.11" rpy="0 0 0"/>
      <material name="green"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.22"/>
      </geometry>
      <origin xyz="0 0 -0.11" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.8"/>
      <origin rpy="0 0 0" xyz="0 0 -0.11"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.00008"/>
    </inertial>
  </link>

  <!-- 3. Upper Arm Rotation Joint (similar to right_arm2armrot_joint) -->
  <joint name="upper_arm_rotation" type="revolute">
    <parent link="upper_arm_extension_link"/>
    <child link="upper_arm_rotation_link"/>
    <origin xyz="0 0 -0.0625" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="50" velocity="15.0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- TRANSMISSION for upper_arm_rotation -->
  <transmission name="trans_upper_arm_rotation">
    <joint name="upper_arm_rotation">
      <hardwareInterface>hardware_interface/PositionInterface</hardwareInterface>
    </joint>
    <actuator name="motor_c">
      <hardwareInterface>hardware_interface/PositionInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- 4. Elbow Link (similar to right_elbow_link) -->
  <link name="elbow_link">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.08"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.57075 -1.57075"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.08"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 1.57075 -1.57075"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.0005" ixy="0" ixz="0" iyy="0.0005" iyz="0" izz="0.0005"/>
    </inertial>
  </link>

  <!-- 4. Elbow Pitch Joint (similar to right_armrot2elbow_joint) -->
  <joint name="elbow_pitch" type="revolute">
    <parent link="upper_arm_rotation_link"/>
    <child link="elbow_link"/>
    <origin xyz="0 0 -0.22" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-2.2" upper="0" effort="50" velocity="15.0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- TRANSMISSION for elbow_pitch -->
  <transmission name="trans_elbow_pitch">
    <joint name="elbow_pitch">
      <hardwareInterface>hardware_interface/PositionInterface</hardwareInterface>
    </joint>
    <actuator name="motor_d">
      <hardwareInterface>hardware_interface/PositionInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- 5. Forearm Link (similar to right_forearm_link) -->
  <link name="forearm_link">
    <visual>
      <geometry>
        <cylinder radius="0.03" length="0.09"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.03" length="0.09"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.7"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.00004"/>
    </inertial>
  </link>

  <!-- Fixed joint connecting elbow to forearm -->
  <joint name="elbow_forearm_connection" type="fixed">
    <parent link="elbow_link"/>
    <child link="forearm_link"/>
    <origin xyz="0 0 -0.045" rpy="0 0 0"/>
  </joint>

  <!-- 5. Forearm Rotation Link (similar to right_forearmrot_link) -->
  <link name="forearm_rotation_link">
    <visual>
      <geometry>
        <cylinder radius="0.015" length="0.18"/>
      </geometry>
      <origin xyz="0 0 -0.09" rpy="0 0 0"/>
      <material name="yellow"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.015" length="0.18"/>
      </geometry>
      <origin xyz="0 0 -0.09" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin rpy="0 0 0" xyz="0 0 -0.09"/>
      <inertia ixx="0.0004" ixy="0" ixz="0" iyy="0.0004" iyz="0" izz="0.0001"/>
    </inertial>
  </link>

    <!-- 5. Forearm Rotation Joint (similar to right_forearm2forearmrot_joint) -->
  <joint name="forearm_rotation" type="revolute">
    <parent link="forearm_link"/>
    <child link="forearm_rotation_link"/>
    <origin xyz="0 0 -0.045" rpy="0 0 0"/>
    <axis xyz="0 0 1"/>
    <limit lower="-1.57" upper="1.57" effort="30" velocity="2.0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- TRANSMISSION for forearm_rotation -->
  <transmission name="trans_forearm_rotation">
    <joint name="forearm_rotation">
      <hardwareInterface>hardware_interface/PositionInterface</hardwareInterface>
    </joint>
    <actuator name="motor_e">
      <hardwareInterface>hardware_interface/PositionInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- 6. Wrist Pitch Link (similar to right_forearm_pitch_link) -->
  <link name="wrist_link">
    <visual>
      <geometry>
        <cylinder radius="0.015" length="0.03"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.57075 0 0"/>
      <material name="blue"/>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.015" length="0.03"/>
      </geometry>
      <origin xyz="0 0 0" rpy="1.57075 0 0"/>
    </collision>
    <inertial>
      <mass value="0.3"/>
      <origin rpy="0 0 0" xyz="0 0 0"/>
      <inertia ixx="0.00001" ixy="0" ixz="0" iyy="0.00001" iyz="0" izz="0.00001"/>
    </inertial>
  </link>

  <!-- 6. Wrist Pitch Joint (similar to right_forearmrot2forearm_pitch_joint) -->
  <joint name="wrist_pitch" type="revolute">
    <parent link="forearm_rotation_link"/>
    <child link="wrist_link"/>
    <origin xyz="0 0 -0.18" rpy="0 0 0"/>
    <axis xyz="0 1 0"/>
    <limit lower="-0.785" upper="0.785" effort="10" velocity="2.0"/>
    <dynamics damping="0.1" friction="0.1"/>
  </joint>

  <!-- TRANSMISSION for wrist_pitch -->
  <transmission name="trans_wrist_pitch">
    <joint name="wrist_pitch">
      <hardwareInterface>hardware_interface/PositionInterface</hardwareInterface>
    </joint>
    <actuator name="motor_f">
      <hardwareInterface>hardware_interface/PositionInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- 7. Hand Link (similar to right_hand_link) -->
  <link name="hand_link">
    <visual>
      <geometry>
        <box size="0.04 0.02 0.12"/>
      </geometry>
      <origin xyz="0 0 -0.06" rpy="0 0 0"/>
      <material name="white"/>
    </visual>
    <collision>
      <geometry>
        <box size="0.04 0.02 0.12"/>
      </geometry>
      <origin xyz="0 0 -0.06" rpy="0 0 0"/>
    </collision>
    <inertial>
      <mass value="0.2"/>
      <origin rpy="0 0 0" xyz="0 0 -0.06"/>
      <inertia ixx="0.001" ixy="0" ixz="0" iyy="0.001" iyz="0" izz="0.001"/>
    </inertial>
  </link>

  <!-- 7. Wrist Yaw Joint (similar to right_forearm_roll2hand_joint but as a revolute joint) -->
  <joint name="wrist_yaw" type="revolute">
    <parent link="wrist_link"/>
    <child link="hand_link"/>
    <origin xyz="0 0 -0.05" rpy="0 0 0"/>
    <axis xyz="0 0 1"/> <!-- Z-axis rotation for yaw -->
    <limit lower="-0.52" upper="0.52" effort="5" velocity="2.0"/>
    <dynamics damping="0.05" friction="0.05"/>
  </joint>

  <!-- TRANSMISSION for wrist_yaw -->
  <transmission name="trans_wrist_yaw">
    <joint name="wrist_yaw">
      <hardwareInterface>hardware_interface/PositionInterface</hardwareInterface>
    </joint>
    <actuator name="motor_g">
      <hardwareInterface>hardware_interface/PositionInterface</hardwareInterface>
      <mechanicalReduction>1</mechanicalReduction>
    </actuator>
  </transmission>

  <!-- ros2_control tag -->
  <ros2_control name="GazeboSystem" type="system">
    <hardware>
      <plugin>gazebo_ros2_control/GazeboSystem</plugin>
    </hardware>
    
    <joint name="shoulder_pitch">
      <command_interface name="position">
        <param name="min">-2.51</param>
        <param name="max">2.51</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <joint name="shoulder_roll">
      <command_interface name="position">
        <param name="min">-1.57</param>
        <param name="max">0.50</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <joint name="upper_arm_rotation">
      <command_interface name="position">
        <param name="min">-1.57</param>
        <param name="max">1.57</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <joint name="elbow_pitch">
      <command_interface name="position">
        <param name="min">-2.2</param>
        <param name="max">0</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <joint name="forearm_rotation">
      <command_interface name="position">
        <param name="min">-1.57</param>
        <param name="max">1.57</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <joint name="wrist_pitch">
      <command_interface name="position">
        <param name="min">-0.785</param>
        <param name="max">0.785</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
    
    <joint name="wrist_yaw">
      <command_interface name="position">
        <param name="min">-0.52</param>
        <param name="max">0.52</param>
      </command_interface>
      <state_interface name="position"/>
      <state_interface name="velocity"/>
    </joint>
  </ros2_control>

    <gazebo>
    <plugin name="gazebo_ros2_control" filename="libgazebo_ros2_control.so">
      <parameters>$(find humarm_ros2)/config/ros2_control.yaml</parameters>
    </plugin>
  </gazebo>

</robot>
